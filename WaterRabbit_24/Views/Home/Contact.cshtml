@model WaterRabbit_24.Models.Message

@{
    ViewBag.Title = "Contact";
}

<div id="contact" class="container-fluid bg-tertairy">
    <h2 class="text-center mb-5 py-4">CONTACT</h2>
    <div class="row">
        <div class="col-sm-5">
            <p>Contact us and we'll get back to you within 24 hours.</p>
            <p><span>Glasgow, Scotland</span></p>
            <p><span>+44 15151515151515</span></p>
            <p><span>contactus@waterrabbit.com</span></p>
        </div>
        <div class="col-sm-5">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="col-sm-7">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-sm-6 mb-3">

                            @Html.TextBoxFor(model => model.FullName, new { @placeholder = "Name", @class = "form-control", @id = "name" })
                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-sm-6 mb-3">

                            @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email", @class = "form-control", @id = "email" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @Html.TextAreaFor(model => model.Comment, new { @placeholder = "Comment", @class = "form-control", @id = "comments", @rows = 5 })
                    @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                    <br />
                    <div class="row">
                        <div class="col-sm-12 mb-3 d-flex">

                            <input type="submit" value="Send" class="btn btn-secondary ms-auto" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>